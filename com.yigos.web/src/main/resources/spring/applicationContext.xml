<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:context="http://www.springframework.org/schema/context" 
xsi:schemaLocation="
http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
http://www.springframework.org/schema/context 
http://www.springframework.org/schema/context/spring-context-3.2.xsd">
<context:component-scan base-package="com.yigos" use-default-filters="true"
	name-generator="com.yigos.framework.context.annotation.YigosAnnotationBeanNameGenerator">
	<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller" />
</context:component-scan>
<bean id="propertyConfigurer" 
	class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="location" 
    	value="classpath:datasource/jdbc.properties"/>
</bean>

<import resource="classpath:datasource/transaction.xml" />

<import resource="classpath:spring/app-quartz.xml" />
<!--
<import resource="classpath:app/webservices.xml" />
-->
</beans>
